<%= stylesheet_link_tag 'recipes', media: 'all', 'data-turbolinks-track': 'reload' %>

<h1>Add New Recipe</h1>

<div class="new-recipe-container">
  <%= form_with model: @recipe, url: recipes_path do |form| %>
    <div>
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div>
      <%= form.label :description %>
      <%= form.text_area :description %>
    </div>

    <div>
      <%= form.label :preparation_time %>
      <%= form.number_field :preparation_time %>
    </div>

    <div>
      <%= form.label :cooking_time %>
      <%= form.number_field :cooking_time %>
    </div>

    <div>
      <%= form.submit "Add Recipe" %>
    </div>
  <% end %>
</div>
